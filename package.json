{
  "name": "couch-to-mcg-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Couch to MCG - Track your marathons, runs and daily workouts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @couch-to-mcg/web dev",
    "dev:mobile": "pnpm --filter @couch-to-mcg/mobile start",
    "build:web": "pnpm --filter @couch-to-mcg/web build",
    "build:mobile": "pnpm --filter @couch-to-mcg/mobile build",
    "build:core": "pnpm --filter @couch-to-mcg/core build",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
